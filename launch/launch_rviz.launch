
<launch>
    <arg name="model" value="$(find foilboat_description)/urdf/foilboat_model.xacro"/>
    <arg name="rviz_conf" value="$(find foilboat_description)/rviz/rvizConfig.rviz"/>

    <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />
    
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_conf)" required="true" />
</launch>